@model Contrive.Sample.Areas.Contrive.Models.DashboardViewModel
@{
  ViewBag.Title = "Index";
  Layout = "~/Areas/Contrive/Views/Shared/_ContriveLayoutPage.cshtml";
}
<h2>
  Manage Users and Roles</h2>
<p>
  An easy-to-use management system for Membership Users and Roles based on the ASP.NET
  Membership system.</p>
<div class="fl w48pc mr20">
  <fieldset>
    <legend>Manage Users</legend>
    <p>@Html.ActionLink("Manage Users", "Index", "Membership", new {area = "Contrive"}, null)
      | @Html.ActionLink("Create User", "CreateUser", "Membership", new {area = "Contrive"}, null)</p>
    <table>
      <tr>
        <td>
          Total Users:
        </td>
        <td>@Model.TotalUserCount
        </td>
      </tr>
      <tr>
        <td>
          Users Online:
        </td>
        <td>@Model.TotalUsersOnlineCount
        </td>
      </tr>
    </table>
  </fieldset>
</div>
<div class="fr w48pc">
  <fieldset>
    <legend>Manage Roles</legend>
    <p>@Html.ActionLink("Manage Roles", "Index", "Role", new {area = "Contrive"}, null)</p>
    <table>
      <tr>
        <td>
          Total Roles:
        </td>
        <td>@Model.TotalRolesCount
        </td>
      </tr>
      <tr>
        <td>
        </td>
        <td>
        </td>
      </tr>
    </table>
  </fieldset>
</div>